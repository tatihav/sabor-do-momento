@{
	Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/auth.css" />

	<div class="container-login d-flex vh-100">
		<div class="logo-box d-flex align-items-center justify-content-center flex-column">
			<img src="~/img/logo.png" alt="Logo" class="img-fluid mb-2" style="max-width: 200px;" />

		</div>
		<div class="form-box d-flex align-items-center justify-content-center flex-grow-1">
			<div class="login-card p-4 rounded">
				<h2 class="text-center mb-4">Login</h2>
				<form method="post">
					<label for="email">Email</label>
					<input type="email" class="form-control mb-3 bg-light border-0" id="email" name="email" placeholder="Digite seu E-mail" />

					<label for="senha">Senha</label>
					<input type="password" class="form-control mb-4 bg-light border-0" id="senha" name="senha" placeholder="Digite sua senha" />

					<button class="btn btn-dark w-100 mb-3" type="submit">Entrar</button>

				</form>
				<p class="text-nconta">
					Ainda não tem uma conta? <a asp-action="Cadastro" class="fw-bold">Cadastre-se</a>
				</p>
				<a asp-controller="Home" asp-action="Inicio" class="btn btn-outline-dark w-100 mt-2">
					Continuar sem uma conta
				</a>

				<h3>@ViewBag.Message</h3>

			</div>
		</div>
	</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sabor do Momento</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>

    <header class="header-gradiente py-3">
        <div class="container">
            <div class="row align-items-center">
                <!-- Logotipo -->
                <a asp-controller="Home" asp-action="Inicio" class="col-md-2">
                    <img src="~/img/logo.png" alt="Sabor do Momento" class="img-fluid" style="max-height: 150px;">
                </a>

                <!-- Campo de busca -->
                <div class="col-md-7">
                    <form asp-controller="Pesquisa" asp-action="Index" method="get" class="d-flex">
                        <input type="text" name="termo" class="form-control me-2" placeholder="Pesquise receitas por nome, tags ou categoria">
                        <button class="btn btn-outline-secondary" type="submit">PESQUISAR</button>
                    </form>
                </div>

                <!-- Login -->
                <div class="col-md-3 text-end">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Perfil" asp-action="MeuPerfil" class="btn btn-outline-dark">
                            <i class="bi bi-person-circle"></i> MEU PERFIL
                        </a>
                        <form asp-controller="Auth" asp-action="Logout" method="post" style="display:inline">
                            <button type="submit" class="btn btn-outline-danger">Sair</button>
                        </form>

                    }
                    else
                    {
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-dark">
                            <i class="bi bi-box-arrow-in-right"></i> LOGIN
                        </a>

                    }




                </div>
            </div>

            <!-- Menu categorias -->
            <nav class="menu-categorias  mt-3">
                <div class="container d-flex justify-content-between py-2">
                    <a asp-controller="Categoria" asp-action="CafeDaManha" asp-route-categoria="Café da Manhã" class=" text-decoration-none">
                        CAFÉ DA MANHÃ
                    </a>
                    <a asp-controller="Categoria" asp-action="Almoco" asp-route-categoria="Almoço" class="text-decoration-none">ALMOÇO</a>
                    <a asp-controller="Categoria" asp-action="Lanche" asp-route-categoria="Lanche" class=" text-decoration-none">LANCHE</a>
                    <a asp-controller="Categoria" asp-action="Jantar" asp-route-categoria="Jantar" class=" text-decoration-none">JANTAR</a>
                    <a asp-controller="Categoria" asp-action="Sobremesa" asp-route-categoria="Sobremesa" class=" text-decoration-none">SOBREMESA</a>
                </div>
            </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Sabor do Momento
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>

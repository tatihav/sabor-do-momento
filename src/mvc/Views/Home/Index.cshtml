@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Guia de Telas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-4" style="max-width: 500px;">
        <h1 class="text-center mb-4">Telas do Sistema</h1>

        <div class="d-grid gap-2">
            <a asp-controller="Auth" asp-action="Login" class="btn btn-dark rounded-0">Login</a>
            <a asp-controller="Auth" asp-action="Cadastro" class="btn btn-dark rounded-0">Cadastro</a>
            <a asp-controller="Home" asp-action="Inicio" class="btn btn-dark rounded-0">Página Inicial</a>
            <a asp-controller="Receita" asp-action="Detalhes"
               asp-route-id="2" asp-route-idCategoria="1"
               class="btn btn-dark rounded-0">
                Página da Receita
            </a>
            <a asp-controller="Receita" asp-action="Nova" class="btn btn-dark rounded-0">Adicionar Nova Receita</a>
            <a asp-controller="Perfil" asp-action="Index" class="btn btn-dark rounded-0">Perfil do Usuário</a>
            <a asp-controller="Categoria" asp-action="CafeDaManha" class="btn btn-dark rounded-0">Café da Manhã</a>
            <a asp-controller="Categoria" asp-action="Almoco" class="btn btn-dark rounded-0">Almoço</a>
            <a asp-controller="Categoria" asp-action="Sobremesa" class="btn btn-dark rounded-0">Sobremesa</a>
            <a asp-controller="Categoria" asp-action="Jantar" class="btn btn-dark rounded-0">Jantar</a>
            <a asp-controller="Categoria" asp-action="Lanche" class="btn btn-dark rounded-0">Lanche</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>